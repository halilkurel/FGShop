<!-- Ürün silindiğinde sayfa yenilenmeyecek-->
<script>
            $(document).on('click', '.delete-category', function(e) {
        e.preventDefault();

        if (!confirm("Bu ürünü silmek istediğinize emin misiniz?")) {
            return;
        }

        var categoryId = $(this).data('id'); // Ürün ID'sini alıyoruz
        var row = $(this).closest('tr');

        $.ajax({
            url: '@Url.Action("DeleteCategory", "Category", new { area = "Admin", id = "__id__" })'.replace('__id__', categoryId),
            type: 'DELETE',
            success: function(response) {
                if (response.success) {
                    row.remove(); // Satırı kaldırıyoruz
                } else {
                    alert(response.message || "Ürün silinirken bir hata oluştu.");
                }
            },
            error: function() {
                alert("Bir hata oluştu. Lütfen tekrar deneyin.");
            }
        });
    });


</script>