<!-- Ürün silindiğinde sayfa yenilenmeyecek-->
<script>
    $(document).on('click', '.delete-order', function (e) {
        e.preventDefault();

        if (!confirm("Bu ürünü silmek istediğinize emin misiniz?")) {
            return;
        }

        var orderId = $(this).data('id'); // Ürün ID'sini alıyoruz
        var row = $(this).closest('tr');

        $.ajax({
            url: '@Url.Action("DeleteOrder", "Order", new { area = "Admin", id = "__id__" })'.replace('__id__', orderId),
            type: 'DELETE',
            success: function (response) {
                if (response.success) {
                    row.remove(); // Satırı kaldırıyoruz
                } else {
                    alert(response.message || "Ürün silinirken bir hata oluştu.");
                }
            },
            error: function () {
                alert("Bir hata oluştu. Lütfen tekrar deneyin.");
            }
        });
    });


</script>