@model ResultAboutModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";
}


<!-- Page Sidebar Ends-->
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h4>
                        Hakkımızda Sayfası
                    </h4>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">
                                <svg class="stroke-icon">
                                    <use href="/Riho-Bootstrap-Admin//assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">FGShop </li>
                        <li class="breadcrumb-item active">Hakkımızda İşlemleri</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="list-product">
                            <table class="table" id="project-status">
                                <thead>
                                    <tr>
                                        <th>
                                            <div class="form-check">
                                                <input class="form-check-input checkbox-primary" type="checkbox">
                                            </div>
                                        </th>
                                        <th> <span class="f-light f-w-600">          Başlık</span></th>
                                        <th> <span class="f-light f-w-600">1. Açıklama</span></th>
                                        <th> <span class="f-light f-w-600">2. Açıklama</span></th>
                                        <th> <span class="f-light f-w-600">Düzenle</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Data)
                                    {
                                        <tr class="product-removes">
                                            <td>
                                                <div class="form-check">
                                                    <input class="form-check-input checkbox-primary" type="checkbox">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="product-names">
                                                    <div class="light-product-box"><img class="img-fluid" src="@item.ImageUrl" alt="laptop"></div>
                                                    <p>@item.Title</p>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="product-names">
                                                    <p>@item.Description</p>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="product-names">
                                                    <p>@item.Description2</p>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="product-action">
                                                    <a asp-action="UpdateAbout" asp-controller="About" asp-route-id="@item.Id" class="text-danger">
                                                        <svg>
                                                            <use href="/Riho-Bootstrap-Admin/admin/assets/svg/icon-sprite.svg#edit-content"></use>
                                                        </svg>
                                                    </a>

                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


