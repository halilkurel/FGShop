
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_WebUILayout/Index.cshtml";
    var cart = ViewBag.Cart as List<FGShop.WebUI.Models.CartModels.GetCartDetailList>;
}



@* <!-- Cart -->
@await Html.PartialAsync("~/Views/_WebUILayoutPartial/_WebUILayoutCardPartial.cshtml") *@


<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
            Anasayfa
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Sepetim
        </span>
    </div>
</div>




<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head">
                                <th class="column-1">Ürün</th>
                                <th class="column-2"></th>
                                <th class="column-3">Fiyat</th>
                                <th class="column-4">Adet</th>
                                <th class="column-5">Toplam</th>
                            </tr>
                            @foreach (var item in cart)
                            {
                                <tr class="table_row">

                                    <td class="column-1">
                                        <a data-id="@item.Id" id="remove-product">
                                            <div class="how-itemcart1">
                                                <img src="@item.CoverPhoto" alt="IMG">
                                            </div>
                                        </a>
                                    </td>


                                    <td class="column-2">@item.ProductName</td>
                                    <input type="hidden" name="ProductId" value="@item.ProductId" />
                                    <input type="hidden" name="ColorId" value="@item.ColorId" />
                                    <input type="hidden" name="SizeId" value="@item.SizeId" />
                                    <input type="hidden" name="UserId" value="@ViewBag.UserId" />
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <td class="column-3">@item.Price TL</td>
                                    <td class="column-4">
                                        <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                            <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-minus"></i>
                                            </div>

                                            <input class="mtext-104 cl3 txt-center num-product" type="number" name="OrderQuantity" value="@item.OrderQuantity">

                                            <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-plus"></i>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="column-5">
                                        @((item?.OrderQuantity ?? 0) * (item?.Price ?? 0)) TL
                                    </td>

                                </tr>
                            }


                        </table>
                    </div>

                    <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                        <div class="flex-w flex-m m-r-20 m-tb-5">
                            <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Coupon Code">

                            <div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
                                Kupon Ekle
                            </div>
                        </div>

                        <button id="update-basket" type="submit">
                            <div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                                Uygula
                            </div>
                        </button>
                        
                    </div>
                </div>
            </div>

            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-30">
                        <td> Sepet Tutarı </td>
                    </h4>

                    <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                        <div class="size-208 w-full-ssm">
                            <span class="stext-110 cl2">
                                Adres:
                            </span>
                        </div>

                        <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                            <p class="stext-111 cl6 p-t-2">
                                Kargonuzun gönderileceği adresi giriniz
                            </p>

                            <div class="p-t-15">

                                <div class="bor8 bg0 m-b-12">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="City"  placeholder="Şehir">
                                </div>

                                <div class="bor8 bg0 m-b-12">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="District" placeholder="İlçe">
                                </div>

                                <div class="bor8 bg0 m-b-12">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="Neighbourhood" placeholder="Mahalle">
                                </div>

                                <div class="bor8 bg0 m-b-12">
                                    <textarea class="stext-111 cl8 plh3 size-111 p-lr-15" rows="3" name="Address" placeholder="Adres"></textarea>

                                </div>

                            </div>
                        </div>
                        <div class="size-208 w-full-ssm">
                            <span class="stext-110 cl2">
                                İletişim:
                            </span>
                        </div>

                        <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                            <p class="stext-111 cl6 p-t-2">
                                Lütfen İletişim Bilgilerinizi Giriniz
                            </p>

                            <div class="p-t-15">

                                <div class="bor8 bg0 m-b-12">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="PhoneNumber" placeholder="Telefon Numarası">
                                </div>

                                <div class="bor8 bg0 m-b-12">
                                    <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="Email" placeholder="E-Posta Adresi">
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="flex-w flex-t p-t-27 p-b-33">
                        <div class="size-208">
                            <span class="mtext-101 cl2">
                                Toplam:
                            </span>
                        </div>

                        <div class="size-209 p-t-1">
                            <span class="mtext-110 cl2">
                                @(cart != null ? cart.Sum(x => x.OrderQuantity * x.Price) : 0) TL
                            </span>
                        </div>
                    </div>

                    <button id="pay-button" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                        Ödemeye Geç
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>

    //Remove
    $(document).on('click', '#remove-product', function (e) {
        e.preventDefault();

        var basketID = $(this).data('id');
        var row = $(this).closest('tr'); // Doğru elemanı seçmek için

        $.ajax({
            url: '@Url.Action("RemoveBasket", "Cart", new { id = "__id__" })'.replace('__id__', basketID),
            type: 'DELETE',
            success: function (response) {
                if (response && response.success) {
                    // Satırı kaldır
                    row.fadeOut(400, function () {
                        $(this).remove(); // DOM'dan silme işlemi
                    });

                } else {
                    alert(response.message || "Silinirken bir hata oluştu.");
                }
            },
            error: function () {
                alert("Bir hata oluştu. Lütfen tekrar deneyin.");
            }
        });
    });


    // Create İşlemi
    $(document).on('click', '#pay-button', function (e) {
        e.preventDefault();
        var formData = {
            products: [],
            address: {
                City: $('input[name="City"]').val(),
                Neighbourhood: $('input[name="Neighbourhood"]').val(),
                District: $('input[name="District"]').val(),
                Address: $('textarea[name="Address"]').val(),
                PhoneNumber: $('input[name="PhoneNumber"]').val(),
                Email: $('input[name="Email"]').val(),
                UserId : $('input[name="UserId"]').val(),
                Country: "Türkiye"
            },

                
            
        };

        // Sepet ürünlerini ekle
        $('.table-shopping-cart .table_row').each(function () {
            var row = $(this);
            formData.products.push({
                basketId: row.find('input[name="Id"]').val(),
                userId: row.find('input[name="UserId"]').val(),
                colorId: row.find('input[name="ColorId"]').val(),
                sizeId: row.find('input[name="SizeId"]').val(),
                orderQuantity: row.find('input[name="OrderQuantity"]').val(),
            });
        });

        // AJAX POST isteği gönder
        $.ajax({
            url: '@Url.Action("CreateOrder", "Cart")',
            type: 'POST',
            data: JSON.stringify(formData),
            contentType: "application/json",
            success: function (response) {
                if (response.success) {
                    alert("Sipariş verildi!");
                    // 5 saniye sonra yönlendirme yap
                    setTimeout(function () {
                        window.location.href = '@Url.Action("Index", "Default")';
                    }, 5000);

                } else {
                    alert("Bir hata oluştu: " + response.message);
                }
            },
            error: function (xhr, status, error) {
                alert("Genel bir hata oluştu: " + error);
            }
        });
    });



    // Update işlemi
    $(document).on('click', '#update-basket', function (e) {
        e.preventDefault(); // Sayfanın yenilenmesini engelle

        var products = [];

        // Tablonun her satırını gez
        $('.table-shopping-cart .table_row').each(function () {
            var row = $(this);

            // Satırdaki input değerlerini al
            var Id = row.find('input[name="Id"]').val();
            var productId = row.find('input[name="ProductId"]').val();
            var colorId = row.find('input[name="ColorId"]').val();
            var sizeId = row.find('input[name="SizeId"]').val();
            var orderQuantity = row.find('input[name="OrderQuantity"]').val();
            var userId = row.find('input[name="UserId"]').val();

            // Ürünü products dizisine ekle
            products.push({
                Id: Id,
                UserId: userId,
                ProductId: productId,
                ColorId: colorId,
                SizeId: sizeId,
                OrderQuantity: orderQuantity
            });
        });

        // AJAX PUT isteği gönder
        $.ajax({
            url: '@Url.Action("UpdateBasket", "Cart")',
            type: 'PUT',
            data: JSON.stringify(products),
            contentType: "application/json",
            success: function (response) {
                if (response.success) {
                    alert("Sepet güncellendi!");

                    // Toplam sütunlarını güncelle
                    $('.table-shopping-cart .table_row').each(function () {
                        var row = $(this);
                        var orderQuantity = row.find('input[name="OrderQuantity"]').val();
                        var priceText = row.find('.column-3').text().trim();
                        var price = parseFloat(priceText.replace(" TL", "")) || 0;

                        // Yeni toplam değeri hesapla
                        var newTotal = (orderQuantity * price).toFixed(2) + " TL";
                        row.find('.column-5').text(newTotal); // Toplam hücresini güncelle
                    });

                    // Genel toplamı güncelle
                    var totalSum = 0;
                    $('.table-shopping-cart .table_row').each(function () {
                        var row = $(this);
                        var totalText = row.find('.column-5').text().trim();
                        var total = parseFloat(totalText.replace(" TL", "")) || 0;
                        totalSum += total;
                    });

                    $('.mtext-110.cl2').text(totalSum.toFixed(2) + " TL"); // Genel toplamı güncelle

                } else {
                    alert("Bir hata oluştu: " + response.message);
                }
            },
            error: function (xhr, status, error) {
                alert("Bir hata oluştu: " + error);
            }
        });
    });




</script>

