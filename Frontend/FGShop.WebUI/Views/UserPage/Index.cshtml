@model FGShop.WebUI.Models.UserModels.UserInformationModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_WebUILayout/Index.cshtml";
}



@await Component.InvokeAsync("_UserPageHeadComponentPartial")

<!-- Page Body Start-->
<div class="page-body-wrapper">
    <div class="page-body">
        <!-- Container-fluid starts-->
        <div class="container-fluid">
            <div class="user-profile social-app-profile">
                <div class="row">
                    <!-- user profile start-->
                    <div class="col-sm-12">
                        <div class="card hovercard text-center">
                            <div class="user-image"> </div>
                            <div class="info market-tabs p-0">
                                <ul class="nav nav-tabs border-tab tabs-scoial" id="top-tab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="top-timeline" data-bs-toggle="tab" href="#timeline" role="tab" aria-controls="timeline" aria-selected="true">Profilim</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="top-about" data-bs-toggle="tab" href="#about" role="tab" aria-controls="about" aria-selected="false">Siparişlerim</a>
                                    </li>
                                    <li class="nav-item sc">
                                        <a class="nav-link" id="top-photos" data-bs-toggle="tab" href="#photos" role="tab" aria-controls="photos" aria-selected="false">Likes</a>
                                    </li>
                                    <li class="nav-item lo">
                                        <a class="nav-link" href="/LoginSignIn/LogOut">Çıkış Yap</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-content" id="top-tabContent">
                    <div class="tab-pane fade show active" id="timeline" style="text-align:center;" role="tabpanel" aria-labelledby="timeline" >
                        <div class="col-xl-10 tab-content-container" style="text-align:left;">
                            @await Component.InvokeAsync("_UserPageProfileFormComponentPartial")
                        </div>
                    </div>
                    <div class="tab-pane fade" id="about" role="tabpanel" style="text-align:center;" aria-labelledby="about">
                        <div class="col-xl-10 tab-content-container" style="text-align:left;">
                            @await Component.InvokeAsync("__UserPageOrdersComponentPartial")
                            
                        </div>
                    </div>
                    <div class="tab-pane fade" id="photos" role="tabpanel" style="text-align:center;" aria-labelledby="photos">
                        <div class="col-xl-10 tab-content-container" style="text-align:left;">
                            @await Component.InvokeAsync("_UserPageLikesComponentPartial")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Container-fluid Ends -->
    </div>
</div>

<script>
    document.querySelectorAll('.nav-item').forEach(tab => {
        tab.addEventListener('click', function (e) {
            // Çıkış linkine tıklanırsa, preventDefault çağrısı yapılmaz.
            if (e.target.closest('a').getAttribute('href') === '/LoginSignIn/LogOut') {
                return;
            }

            e.preventDefault(); // Varsayılan davranışı engelle

            // Tüm sekmelere ait col-xl-10 elemanlarını gizle
            document.querySelectorAll('.tab-pane .col-xl-10').forEach(content => {
                content.style.display = 'none'; // Tüm col-xl-10 elemanlarını gizle
            });

            // Tıklanan sekmeye ait col-xl-10 elemanını göster
            const targetTab = this.querySelector('a').getAttribute('href'); // Hangi sekmenin hedef olduğunu al
            const targetContent = document.querySelector(`${targetTab} .col-xl-10`); // Hedef elemanı bul
            if (targetContent) {
                targetContent.style.display = 'inline-block'; // Hedef içeriği görünür yap
            }

            // Aktif sekmeyi güncelle
            document.querySelectorAll('.nav-item').forEach(link => link.classList.remove('active')); // Tüm sekmelerden 'active' sınıfını kaldır
            this.classList.add('active'); // Tıklanan sekmeye 'active' sınıfını ekle
        });
    });
</script>

