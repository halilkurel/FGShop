@model ResultCategoryModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_WebUILayout/Index.cshtml";
}



<!-- Cart -->
@await Html.PartialAsync("~/Views/_WebUILayoutPartial/_WebUILayoutCardPartial.cshtml")



<div class="sec-banner bg0 p-t-80 p-b-50">
	<div class="container">
		<div class="row">
			@foreach(var item in Model.Data)
			{
				<div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
					<!-- Block1 -->
					<div class="block1 wrap-pic-w">
						<img src="@item.CoverPhoto" alt="IMG-BANNER" style="width: 100%; height: 300px; object-fit: cover;">


						<a href="~/cozastore-master/product.html" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
							<div class="block1-txt-child1 flex-col-l">
								<span class="block1-name ltext-102 trans-04 p-b-8">
									@item.CategoryName
								</span>

							</div>

							<div class="block1-txt-child2 p-b-4 trans-05">
								<div class="block1-link stext-101 cl0 trans-09">
									Satın Al
								</div>
							</div>
						</a>
					</div>
				</div>
			}
			
		</div>
	</div>
</div>